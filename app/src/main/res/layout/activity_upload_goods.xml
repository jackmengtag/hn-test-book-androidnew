<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/upload_goods_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.5dp"
            android:src="@drawable/icon_back_g" />

        <!--        <ImageView-->
        <!--            android:id="@+id/mall_caidan"-->
        <!--            android:layout_width="25dp"-->
        <!--            android:layout_height="25dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginRight="12.5dp"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:src="@drawable/caidan" />-->

        <TextView
            android:id="@+id/mall_woyaokaidian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="上传商品"
            android:textColor="@color/text_999999"
            android:textSize="20dp" />

        <!--        <ImageView-->
        <!--            android:id="@+id/mall_kaidian"-->
        <!--            android:layout_width="25dp"-->
        <!--            android:layout_height="25dp"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginRight="143dp"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:src="@drawable/kaidian" />-->

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tianjiashangpingtupian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e8e8e8"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/daishangchuanshangpintupian"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/tjtp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="+添加图片" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="商品名称 "
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/shangpin_migncheng"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/mo_ren_shurukuang_biankuang_bg"
                                android:gravity="center_vertical"
                                android:hint="请输入商品名称"
                                android:paddingLeft="5dp"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="商品数量 "
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:id="@+id/xinngbie_xzk"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/shangpin_shuliang"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/mo_ren_shurukuang_biankuang_bg"
                                android:gravity="center_vertical"
                                android:hint="请收入商品数量"
                                android:inputType="numberSigned"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="商品价格 "
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/shangpin_jiage"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_weight="1"
                                android:background="@drawable/mo_ren_shurukuang_biankuang_bg"
                                android:gravity="center_vertical"
                                android:hint="请输入商品价格"
                                android:inputType="numberDecimal"
                                android:paddingLeft="5dp"
                                android:textColor="#000000"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="85dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="商品分类 "
                            android:textColor="#000000"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:id="@+id/shenfenzheng_sf_ll"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <RadioGroup
                                android:id="@+id/radioGroup_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <!--加了RadioGroup包住3个RadioButton后就默认自动只能选一个了-->

                                <RadioButton
                                    android:id="@+id/radioBT_shipin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="食品"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/radioBT_yongpin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="用品"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/radioBT_qita"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="其他"
                                    android:textSize="12dp" />

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/user_shenfen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_ff5e00_r_5"
                android:gravity="center"
                android:text="开始上传"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>