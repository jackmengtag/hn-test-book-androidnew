<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_gray_10radius"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/appraise_user_icon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appraise_user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名买家名"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/appraise_user_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论买家评论" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sange_pingjiatu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appraise_user_tu1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mall_white" />

        <ImageView
            android:id="@+id/appraise_user_tu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mall_white" />

        <ImageView
            android:id="@+id/appraise_user_tu3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mall_white" />

    </LinearLayout>

</LinearLayout>