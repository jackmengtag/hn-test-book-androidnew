<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#131313"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#131313"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/search_btn_back"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="#3F423F">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/search_iv_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="@dimen/dp_5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="8"
                        android:src="@mipmap/search"
                        android:text="ss"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/search_et_input"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@drawable/search_icon"
                        android:hint="广西黑水河风景"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:shadowColor="@color/green"
                        android:textColor="#F4E9E9"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/search_iv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_marginRight="10dp"
                    android:layout_weight="8"
                    android:src="@mipmap/ic_edit_text_clear"
                    android:visibility="visible" />
            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/search_btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:background="@color/black"
            android:text="取消"
            android:textColor="@color/oil_red"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>