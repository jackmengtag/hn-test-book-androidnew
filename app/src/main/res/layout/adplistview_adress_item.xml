<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idexkong"
    android:background="@color/alivc_common_font_white"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay0"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_9b"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:background="@color/gray_9b"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView_00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请输入姓名"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="left"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="gone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话号码"
                android:background="@color/gray_9b"
                android:layout_marginRight="@dimen/dp_20"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/textView_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请输入电话号码"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/gray_9b"
                android:text="地址"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/textView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入地址"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_sel_0_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lay_sel_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_sel"
                android:gravity="right|center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="visible"
                android:src="@drawable/w_checksel"
                 />
            <TextView
                android:gravity="right|center_vertical"
                android:textColor="@color/black"
                android:id="@+id/textView_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="选择地址" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/alivc_common_font_white"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/textView_delet"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="删除"
                android:visibility="visible"
                android:layout_marginRight="20dp"
                android:background="@color/alivc_common_font_white"
                />

            <Button
                android:visibility="visible"
                android:id="@+id/textView_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/alivc_common_font_white"
                android:text="修改" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_9b"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>
