<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oil_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <View style="@style/tv_cut_off_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/suggest_edt"
            style="@style/edt_match_style"
            android:layout_height="@dimen/dp_125"
            android:background="@null"
            android:gravity="left|top"
            android:hint="感谢您对商品进行评价！"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/camera_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_15"
                android:src="@mipmap/suggest_camera_img" />

            <TextView
                style="@style/tv_wrap_style"
                android:text="添加图片说明"
                android:textColor="@color/text_color_light_gray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/sure_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_36"
        android:background="@drawable/selected_4e71ff_button_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />


</LinearLayout>
