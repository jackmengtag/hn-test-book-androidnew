<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FC6C0707"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FC802929"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#161716"
            android:textColor="@color/white"
            android:text="xxx" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rank10_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rule_iv"
            android:layout_below="@id/head_iv"
            android:background="#A8A699"
            android:minHeight="@dimen/dp_42"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#43A047"
                android:text="xxx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rule_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank10_iv"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="#151515"
            android:minHeight="@dimen/dp_22"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="textViewxx" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>