<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <Button
        android:id="@+id/button_tip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_f52d2d_r_22"
        android:textColor="@color/white"
        android:text="恭喜您成功邀请100人，奖励您290元"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="596"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:background="@mipmap/yaoqingtop"
                  />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="300"
            android:background="#ED6466"
            android:orientation="vertical">
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/layid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <include
                    layout="@layout/layout_erweima"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.	用户可通过分享邀请二维码给好友，好友首次下载并注册成功后，邀请方即获得29元奖励金。（邀请人数无上限）" />
                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.	邀请者可通过微信、微博或者面对面、链接等方式分享给好友且好友填写相关信息后，用相关信息进行注册，则视为邀请者邀请成功。" />
                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.	每个新用户只能被邀请一次，同一个登录账号、同一个手机号、同一个设备或者同一个提现账户，都视为同一个用户。" />
                <TextView
                    android:id="@+id/textView04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.	本次活动最终解释权归老表短视频所有，如有疑问，请拨打0772-3106005；或者在公司官网进行联系http://lbdsp.com/。" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>