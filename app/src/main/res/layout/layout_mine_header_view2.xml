<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="-40dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_header_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--        <com.makeramen.roundedimageview.RoundedImageView-->
        <ImageView
            android:id="@+id/iv_little_user_center_avatar"
            android:layout_width="@dimen/alivc_common_size_icon_100"
            android:layout_height="@dimen/alivc_common_size_icon_100"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/user_icon" />
        <!--        app:riv_border_color="#171A23"-->
        <!--        app:riv_border_width="1dp"-->
        <!--        app:riv_oval="true"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/iv_mine_change_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_4e71ff_r_22"
                android:text="商城订单"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                />

            <Button
                android:id="@+id/tv_little_mine_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_4e71ff_r_22"
                android:text="账户余额"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/alivc_common_font_15"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="昵称----"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mine_userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/alivc_common_font_10"
                android:text="老表号----"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <Button
            android:id="@+id/user_shenfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_ff5e00_r_5"
            android:gravity="center"
            android:padding="10dp"
            android:text="个人身份功能"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>